server {
	listen 80;
	listen [::]:80;
	server_name blog.chengpeng.space blog6.chengpeng.space;
	return 301 https://$server_name$request_uri;
}



server {
        server_name blog.chengpeng.space blog6.chengpeng.space;
	ssl on;
	listen 443;
	ssl_certificate /etc/letsencrypt/live/chengpeng.space/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/chengpeng.space/privkey.pem;

	root /var/www/html/blog/;


	index index.html index.htm index.nginx-debian.html;

	location / {
		try_files $uri $uri/ =404;
	}

}

